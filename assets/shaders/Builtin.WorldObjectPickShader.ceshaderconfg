# Shader configuration

name=Builtin.WorldObjectPickShader
vertex_shader_name=Builtin.WorldObjectPickShader
fragment_shader_name=Builtin.WorldObjectPickShader
renderpass=world_object_pick_renderpass

# Vertex attributes (the order influence the final result!)
